<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Product"
            type="com.swipeapp.room.entities.Products" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:strokeWidth="0dp"
        android:layout_marginTop="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/productImageLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@mipmap/no_image" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/productName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:text="@{Product.productName}"
                app:layout_constraintTop_toTopOf="@id/productImageLayout"
                app:layout_constraintStart_toEndOf="@id/productImageLayout"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/productType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:text="@{Product.productType}"
                app:layout_constraintTop_toBottomOf="@id/productName"
                app:layout_constraintStart_toEndOf="@id/productImageLayout"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:text="@{`â‚¹ `+Product.price.toString()}"
                app:layout_constraintTop_toBottomOf="@id/productType"
                app:layout_constraintStart_toEndOf="@id/productImageLayout"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/productTaxTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:text="Tax rate: "
                app:layout_constraintTop_toBottomOf="@id/productPrice"
                app:layout_constraintStart_toEndOf="@id/productImageLayout" />

            <TextView
                android:id="@+id/productTax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:text="@{Product.tax.toString()+`%`}"
                app:layout_constraintTop_toBottomOf="@id/productPrice"
                app:layout_constraintStart_toEndOf="@id/productTaxTxt"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>